FROM python:3.12-alpine

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

WORKDIR /app

COPY requirements.txt requirements-dev.txt .

# pyproj needs alpine-sdk, but alpine-sdk should not be part of the final image, so we remove it right away
RUN apk --no-cache add bash alpine-sdk proj proj-dev proj-util libpq libpq-dev && \
    pip install -r requirements.txt -r requirements-dev.txt && \
    apk del -r alpine-sdk proj-dev libpq libpq-dev

CMD ["python3", "runserver.py"]
EXPOSE 5000
